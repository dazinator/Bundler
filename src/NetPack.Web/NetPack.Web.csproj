    </Content>
    <Content Update="Views\Home\RequireJSHmrTagHelper.cshtml">
      <Pack>$(IncludeRazorContentInPack)</Pack>
    </Content>
    <Content Update="Views\Home\RequireJsHmr.cshtml">
